{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Mezmo Datasource",
  "id": "sdague-mezmo-datasource",
  "metrics": true,
  "logs": true,
  "info": {
    "description": "Datasource for the mezmo log service",
    "author": {
      "name": "Sdague"
    },
    "keywords": ["datasource"],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [],
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=9.5.3",
    "plugins": []
  },
  "routes": [
    {
      "path": "logs",
      "url": "{{ .JsonData.endpoint }}",
      "tokenAuth": {
        "url": "https://iam.cloud.ibm.com/identity/token",
        "params": {
          "grant_type": "urn:ibm:params:oauth:grant-type:apikey",
          "apikey": "{{ .SecureJsonData.apiKey }}"
        }
      }
    },
    {
      "path": "auth",
      "url": "https://iam.cloud.ibm.com",
      "headers": [
        {
          "name": "Content-Type",
          "content": "application/x-www-form-urlencoded"
          }
      ],
      "urlParams": [
      {
        "name": "apikey",
        "content": "{{ .SecureJsonData.apiKey }}"
      },
      {
        "name": "grant_type",
        "content": "urn:ibm:params:oauth:grant-type:apikey"
      }
    ]
    }
  ]
}
